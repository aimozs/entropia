<div class="row">
  <div class="col-md-4 resource-list">
    <%= link_to '+', new_resource_path, class:'btn btn-info' %><%= link_to '+', new_lode_path(resource: @resource.id), class:'btn btn-default pull-right' %><br>
      <p>
        <% if @resources %>  
          <% @resources.order(name: :asc).each do |resource| %>
            <li>
              <%= link_to resource.name, resources_path(resource: resource.id) %>
              <% if current_user.id == 1%>
                <%= link_to 'x', resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </li>
          <% end %>
        <% end %>
      </p>
      <% if @resource %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="row">
            <div class="col-md-6">
              <% if @resource.image %>
                <%= image_tag @resource.image, width:"100px", height:"100px"%>
              <% else %>
                <%= image_tag "questionMark.png", width:"100px", height:"100px"%>
              <% end %>
              <%= @resource.name %> (<%= @resource.resourceType %>) <%= link_to "(Edit)", edit_resource_path(@resource)%>
              
            </div>
            <div class="col-md-6">
              TTValue: <%= @resource.ttValue %><br>
              MarketValue: <%= @resource.marketValue %><br>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-8 resource-desc">
    <%= image_tag "eudoria-v3-0.jpg", width:"100%", height:"100%"%>
  </div>
</div>