<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.file_field :image, multiple: true  %>
  </div>
  <div class="field">
    <%= f.label :itemType %><br>

    <%= f.collection_select :itemType, @itemTypes,:id,:itemType, include_blank: true %>

    <%= f.text_field :itemType %>
  </div>
  <div class="field">
    <%= f.label :level %><br>
    <%= f.text_field :level %>
  </div>
  <div class="field">
    <%= f.label :ttValue %><br>
    <%= f.text_field :ttValue %>
  </div>
  <div class="field">
    <%= f.label :marketValue %><br>
    <%= f.text_field :marketValue %>
  </div>
  <div class="field">
    <%= f.label :volume %><br>
    <%= f.number_field :volume %>
  </div>
  <div class="field">
    <%= f.label :resource_id %><br>
    <%= f.collection_select :resource_id, @resources,:id,:name, include_blank: true %>
    <%# f.link_to_add "+", :resource_id %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
