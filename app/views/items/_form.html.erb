<div class="row field">
  <%= simple_form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
    <div class="col-md-4">
    <%= f.text_field :name, placeholder: "Name" %><br>
    <%= f.file_field :image, type: :file %><br>
    <%= hidden_field_tag :image_cache %>
    <% if current_user.id == 1 %>
      <%= f.text_field :itemType, placeholder: "Item type" %><br>
    <% else %>
      <%= f.collection_select :itemType, @itemTypes, :id, :itemType, include_blank: false %><br>
    <% end %>
    <%= f.text_field :level, placeholder: "Level" %><br>
    <%= f.text_field :ttValue, placeholder: "TTValue" %><br>
    <%= f.text_field :marketValue, placeholder: "Market Value" %><br>
    <%= f.number_field :volume, placeholder: "Volume" %><br>
    <%# f.association :resources, as: :check_boxes %>
    <%= f.submit %>
    </div>
    <div class="col-md-8">
      <% @resources.each do |resource| %>
         <%= link_to resource.name, selectResource_item_path(resource), class: 'btn btn-success' %>
      <% end %>
    </div>
  

  
<% end %>
</div>
