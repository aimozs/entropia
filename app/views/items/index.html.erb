<div class="row">
  <div class="col-md-4 resource-list">
    <h3>Items</h3><%= link_to '+', new_item_path, class:'btn btn-success pull-right' %><br>
      <p>
        <% if @items %>  
          <% @items.order(name: :asc).each do |item| %>
            <li>
              <%= link_to item.name, items_path(item_id: item.id) %>
              <% if current_user.id == 1%>
                <%= link_to 'x', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </li>
          <% end %>
        <% end %>
      </p>
  </div>
  <div class="col-md-8 resource-desc">
    <div class="row">
      <div class="col-md-12">
        <% if @item %>
          <div class="panel panel-default">
            <div class="panel-heading">
              <div class="row">
                <div class="col-md-5">
                  <% if @item.linkPhoto %>
                    <%= image_tag @item.linkPhoto, width:"100px", height:"100px"%>
                  <% else %>
                    <%= image_tag "questionMark.png", width:"100px", height:"100px"%>
                  <% end %>
                <%= @item.name %> <%= link_to "(Edit)", edit_item_path(@item)%>
                </div>
                <div class="col-md-7">
                  TTvalue: <%= @item.ttValue %><br>
                Market Value: <%= @item.ttValue * (@item.marketValue / 100) %><br>
                Volume: <%= @item.volume %><br>
                Cost: <% @item.resources.each do |resource| %><%= resource.ttValue %><% end %><br>
                Market Cost: <br>
                ApA: <br>
                </div>
              </div>
            </div>
            <div class="panel-body">
              description
            </div>
          </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <% @item.resources.each do |resource| %>
          <div class="panel panel-default">
            <div class="panel-heading">
              <%= resource.name %>
            </div>
            <div class="panel-body">
              resource's description
            </div>
        <% end %>
      </div>
    </div>
      <% end %>
  </div>
      
    </div>
  </div>
</div>
